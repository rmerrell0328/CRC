<div class="dx-fieldset">
    <div class="dx-field">

        @(Html.DevExtreme().SelectBox()
            .ID("devicetypes")
            .Name("nmdevicetypes")
            .Placeholder("Select a Device Type")
            .DisplayExpr("text")
