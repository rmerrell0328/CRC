        $("#button-devicetype").dxButton({
            text: "Add Device",
            type: "success",
            stylingMode: "contained",
            onClick: function () {
                //DevExpress.ui.dialog.alert("Uncomment the line to enable sending a form to the server.", "Click Handler");

                //var cbl = returnCables();
                var dev = returnDevices();

                //objCbl = cbl.option("value")
                objDev = dev.option("value")

                //if (objCbl) {
                //    //console.log('adding cable type')
                //    addItem(objCbl.text, objCbl);
                //}

                if (objDev) {
                    //console.log('adding passive device')
                    addItem(objDev.text, objDev);

                }

                $("#popup-device").dxPopup("instance").hide();

            }
        });

    });
</script>